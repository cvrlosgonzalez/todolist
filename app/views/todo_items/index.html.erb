<body>
<div class="container">
<p id="notice"><%= notice %></p>

<h1>ToDo List</h1>

<table class="table-condensed table-bordered">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.description %></td>
        <td class="btn btn-info"><%= link_to 'Show', todo_item %></td>
        <td class="btn btn-info"><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
        <td class="btn btn-danger"><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Todo item ', new_todo_item_path %>
</div>
</body>
